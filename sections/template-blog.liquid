{% paginate blog.articles by section.settings.number_of_blog_posts %}
  {% for article in blog.articles %}
    <div>
      {% if article.image %}
        <img alt="{{ article.image.alt }}" src="{{ article.image.src | image_url }}" width="{{ article.image.width }}" height="{{ article.image.height }}" class="w-100" />
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'w-20' }} 
      {% endif %}
      <h2>{{ article.title }}</h2>

      {% if article.excerpt.size > 0 %}
      excerpt
      {% else %}
        <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
      {% endif %}
    </div>
  {% endfor %}
{% endpaginate %}

{% schema %}
  {
    "name": "Blog",
    "settings": [
      { 
        "type": "range",
        "id": "number_of_blog_posts",
        "step": 1,
        "min": 1,
        "max": 6,
        "label": "Blog posts per page",
        "default": 3
      }
    ]
  }
{% endschema %}